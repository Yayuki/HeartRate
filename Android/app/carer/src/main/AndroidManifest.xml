<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="yayuki.heartrate.android.carer">

    <application
        android:name=".CarerApplication"
        android:label="@string/app_name">
        <activity
            android:name="yayuki.heartrate.android.MainActivity"
            android:theme="@style/Theme.Android.NoActionBar">
            <intent-filter>
                <action android:name="yayuki.hreatrate.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key" />
    </application>
</manifest>